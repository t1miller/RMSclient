<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.wifiaware.WifiAwareTester">


    <Button
            android:text="Broadcast Bear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/broadcast_bear_button"
            android:layout_marginTop="96dp"
            app:layout_constraintBottom_toTopOf="@id/close_session"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            />

    <TextView
            android:text="Broadcast the default image in our cache:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/broadcast_bear_button"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/close_session" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.177"
            android:layout_marginTop="8dp"/>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:name="rr.rms.ui.roundrobintest.NodeSignatureFragment"
            android:layout_width="413dp"
            android:layout_height="292dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.wifiaware.RoundRobinFragment"
            tools:listitem="@layout/fragment_nodesignature" app:layout_constraintTop_toBottomOf="@+id/status"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Kill Session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/close_session" app:layout_constraintEnd_toEndOf="@+id/broadcast_bear_button"
            app:layout_constraintStart_toStartOf="@+id/broadcast_bear_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/broadcast_bear_button"
    />


</androidx.constraintlayout.widget.ConstraintLayout>

