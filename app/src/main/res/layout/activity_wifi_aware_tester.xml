<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <Button
            android:text="Broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/broadcast_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/subscribe_button"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:name="rr.rms.ui.roundrobintest.NodeSignatureFragment"
            android:layout_width="427dp"
            android:layout_height="369dp"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.wifiaware.RoundRobinFragment"
            tools:listitem="@layout/fragment_nodesignature"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Close Session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/close_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/subscribe_button"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
            android:focusable="true"
            android:id="@+id/scrollview"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/list"
            app:layout_constraintTop_toBottomOf="@+id/broadcast_button">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:textColor="#FF0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/log_textview"
                    app:layout_constraintTop_toBottomOf="@+id/broadcast_button"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="Subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subscribe_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/broadcast_button"
            app:layout_constraintEnd_toStartOf="@id/close_button" />
    <Button
            android:text="Send Msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg_button"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/close_button"
            app:layout_constraintEnd_toEndOf="@+id/close_button"
            app:layout_constraintStart_toStartOf="@+id/close_button"/>
    <Button
            android:text="Send Bear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_bear_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/subscribe_button"
            app:layout_constraintStart_toStartOf="@+id/subscribe_button"
            app:layout_constraintEnd_toEndOf="@+id/subscribe_button"/>
    <Button
            android:text="Receive Bear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receive_bear_button"
            app:layout_constraintStart_toStartOf="@+id/broadcast_button"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/broadcast_button"
            app:layout_constraintEnd_toEndOf="@+id/broadcast_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>

